<%# 19_フォロー機能 で編集 %>
<%# 課題　フォローとフォロワーを表示する %>
<div class="container">
  <h2>ユーザー</h2>
      <div class="container-child col-md-2 col-sm-4 col-xs-6 ">
        <p>
          <%= profile_img(@user) %><br />
          <%= @user.name %>
          <%= render 'follow_form', user: @user %>
        </p>

        <h3>フォローしている人</h3>
        <% @user_followed.each do |user| %>
          <p>
            <%= profile_img(user) %>
            <%=link_to user.name,user_path(user.id) %>
          </p>
        <% end %>

        <h3>フォローされている人</h3>
        <% @user_followers.each do |user| %>
          <p>
            <%= profile_img(user) %>
            <%=link_to user.name,user_path(user.id) %>
          </p>
        <% end %>
      </div>
</div>
